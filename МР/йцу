import json
import os
import shutil

def execute_commands(json_file):
    with open(json_file, 'r') as f:
        commands = json.load(f)
    
    for command, args in commands.items():
        if command == 'create_file':
            # Создание файла
            file_path = args['path']
            try:
                with open(file_path, 'w') as f:
                    pass
                print(f"Файл {file_path} создан успешно.")
            except Exception as e:
                print(f"Ошибка создания файла {file_path}: {e}")
        
        elif command == 'delete_file':
            # Удаление файла
            file_path = args['path']
            try:
                os.remove(file_path)
                print(f"Файл {file_path} удален успешно.")
            except Exception as e:
                print(f"Ошибка удаления файла {file_path}: {e}")
        
        elif command == 'copy_file':
            # Копирование файла
            src_path = args['source']
            dst_path = args['destination']
            try:
                shutil.copy(src_path, dst_path)
                print(f"Файл {src_path} скопирован в {dst_path} успешно.")
            except Exception as e:
                print(f"Ошибка копирования файла {src_path}: {e}")
        
        elif command == 'move_file':
            # Перемещение файла
            src_path = args['source']
            dst_path = args['destination']
            try:
                shutil.move(src_path, dst_path)
                print(f"Файл {src_path} перемещен в {dst_path} успешно.")
            except Exception as e:
                print(f"Ошибка перемещения файла {src_path}: {e}")
        
        elif command == 'create_dir':
            # Создание директории
            dir_path = args['path']
            try:
                os.mkdir(dir_path)
                print(f"Директория {dir_path} создана успешно.")
            except Exception as e:
                print(f"Ошибка создания директории {dir_path}: {e}")
        
        elif command == 'delete_dir':
            # Удаление директории
            dir_path = args['path']
            try:
                shutil.rmtree(dir_path)
                print(f"Директория {dir_path} удалена успешно.")
            except Exception as e:
                print(f"Ошибка удаления директории {dir_path}: {e}")

# Пример файла JSON:
# {
#     "create_file": {"path": "example.txt"},
#     "delete_file": {"path": "example.txt"},
#     "copy_file": {"source": "example.txt", "destination": "example_copy.txt"},
#     "move_file": {"source": "example.txt", "destination": "moved_example.txt"},
#     "create_dir": {"path": "example_dir"},
#     "delete_dir": {"path": "example_dir"}
# }

execute_commands('commands.json')
